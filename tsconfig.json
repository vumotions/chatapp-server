{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "files": ["src/type.d.ts"],
  "include": ["src/**/*"]
}
  
