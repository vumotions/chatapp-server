{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ES2020",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": false,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["src/*"]
      },
      "noImplicitAny": false,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"]
  }
  
